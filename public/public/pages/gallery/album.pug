h3 {{data.title}}
h4(class="preserve-newlines") {{data.description}}

div(ng-repeat="item in data.photos")            
    div(class="col-sm-4 col-xs-12")
        div(class="well photo-well interactive" data-toggle="modal" data-target="#photo-modal" ng-click="viewPhoto($index)")
            div(class="tile-image-wrapper")
                img(src="{{item.imagePath}}" class="tile-image photo-image")
            h5(class="photo-caption text-center") {{item.caption}}

div(class="clearfix")

div(class="form-group")
    a(class="btn btn-default center-block form-control" href="/Gallery") Back to Gallery

div(class="photo-box")
    div(class="col-xs-1 full-height")
        div(class="chevron" ng-click="swipeRight(); $event.stopPropagation();")
            i(class="fa fa-chevron-circle-left fa-4x")
    div(class="col-xs-10 full-height")
        div(class="photo-box-image-wrapper")
            a(href="{{selectedPhoto.imagePath}}" target="_blank")
                img(src="{{selectedPhoto.imagePath}}" class="photo-box-image noselect" ng-click="$event.stopPropagation()")
        p(class="photo-box-text text-center") 
            strong {{index + 1}}/{{data.photos.length}} 
            em {{selectedPhoto.caption}}
    div(class="col-xs-1 full-height")
         div(class="chevron chevron-right" ng-click="swipeLeft(); $event.stopPropagation();")
            i(class="fa fa-chevron-circle-right fa-4x")
