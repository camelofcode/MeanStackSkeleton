div(class='panel sidebar' ng-cloak ng-controller="sidebarController")
    h3 Upcoming Things
    div(ng-repeat="item in items")
        div(class="sidebar-retreat noselect center-block" ng-click="viewThing(item)")
            h4 {{ item.title }}
            h4
                small {{ item.date | date: 'dd-MMM-yyyy' }}
    a(href="/Things" class="btn btn-primary center-block") View All